<nav class="fixed top-0 w-full bg-white z-50 border-b border-gray-100">
  <div class="w-full mx-auto px-8 sm:px-12 lg:px-16">
    <div class="flex justify-between items-center h-20">
      <div class="flex items-center">
        <a href="/" class="text-xl font-bold" style="font-family: var(--font-family-heading)">
          <span class="text-gray-900">Vsingleton</span> <span class="text-[#5B9F9B]">Consulting</span>
        </a>
      </div>

      <div class="hidden md:flex items-center space-x-8">
        <a href="/about" class="text-gray-600 hover:text-gray-900 transition-colors font-medium">About</a>
        <a href="/services" class="text-gray-600 hover:text-gray-900 transition-colors font-medium">Services</a>
        <a href="/contact" class="bg-[#5B9F9B] text-white px-6 py-3 rounded-full hover:bg-[#4d8682] transition-colors font-semibold shadow-md hover:shadow-lg">
          Contact
        </a>
      </div>

      <button id="mobile-menu-button" class="md:hidden text-gray-700 hover:text-[#5B9F9B] transition-colors">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>

  <div id="mobile-menu" class="hidden md:hidden bg-white border-t border-gray-200">
    <div class="px-4 pt-2 pb-4 space-y-2">
      <a href="/about" class="block px-4 py-3 text-gray-600 hover:bg-gray-50 hover:text-gray-900 rounded-lg transition-colors font-medium">
        About
      </a>
      <a href="/services" class="block px-4 py-3 text-gray-600 hover:bg-gray-50 hover:text-gray-900 rounded-lg transition-colors font-medium">
        Services
      </a>
      <a href="/contact" class="block px-4 py-3 bg-[#5B9F9B] text-white text-center rounded-full hover:bg-[#4d8682] transition-colors font-semibold">
        Contact
      </a>
    </div>
  </div>
</nav>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const menuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    menuButton?.addEventListener('click', () => {
      mobileMenu?.classList.toggle('hidden');
    });

    document.querySelectorAll('#mobile-menu a').forEach(link => {
      link.addEventListener('click', () => {
        mobileMenu?.classList.add('hidden');
      });
    });
  });
</script>
