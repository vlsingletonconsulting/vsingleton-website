---
import Navigation from '../components/Navigation.astro';
import '../styles/global.css';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Contact Us" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>Contact - Vsingleton Consulting</title>
	</head>
	<body>
		<Navigation />

		<main class="pt-20">
			<section class="py-32 bg-white min-h-screen flex items-center">
				<div class="w-full mx-auto px-8 sm:px-12 lg:px-16">
					<div class="text-center max-w-4xl mx-auto mb-20">
						<h1 class="text-6xl md:text-8xl font-bold mb-8 text-gray-900">
							Let's Work Together
						</h1>
						<p class="text-xl text-gray-600 leading-relaxed mb-12">
							Ready to transform your digital presence? Get in touch and let's discuss your project.
						</p>
					</div>

					<div class="max-w-2xl mx-auto">
						<div class="bg-gray-50 rounded-3xl p-12">
							<div class="space-y-8">
								<div>
									<h3 class="text-2xl font-bold mb-2 text-gray-900">Email</h3>
									<a href="mailto:hello@vsingleton.com" class="text-xl text-[#5B9F9B] hover:text-[#4d8682] transition-colors">
										hello@vsingleton.com
									</a>
								</div>

								<div>
									<h3 class="text-2xl font-bold mb-2 text-gray-900">Phone</h3>
									<a href="tel:+1234567890" class="text-xl text-[#5B9F9B] hover:text-[#4d8682] transition-colors">
										+1 (234) 567-890
									</a>
								</div>

								<div>
									<h3 class="text-2xl font-bold mb-4 text-gray-900">Send a Message</h3>
									<form class="space-y-4">
										<div>
											<label for="name" class="block text-sm font-semibold text-gray-700 mb-2">Name</label>
											<input
												type="text"
												id="name"
												name="name"
												class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-[#5B9F9B] focus:outline-none focus:ring-2 focus:ring-[#5B9F9B]/20 transition-all"
												required
											/>
										</div>
										<div>
											<label for="email" class="block text-sm font-semibold text-gray-700 mb-2">Email</label>
											<input
												type="email"
												id="email"
												name="email"
												class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-[#5B9F9B] focus:outline-none focus:ring-2 focus:ring-[#5B9F9B]/20 transition-all"
												required
											/>
										</div>
										<div>
											<label for="message" class="block text-sm font-semibold text-gray-700 mb-2">Message</label>
											<textarea
												id="message"
												name="message"
												rows="5"
												class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-[#5B9F9B] focus:outline-none focus:ring-2 focus:ring-[#5B9F9B]/20 transition-all resize-none"
												required
											></textarea>
										</div>
										<button
											type="submit"
											class="w-full bg-[#5B9F9B] text-white px-8 py-4 rounded-full text-lg font-semibold hover:bg-[#4d8682] transition-colors shadow-lg hover:shadow-xl"
										>
											Send Message
										</button>
									</form>
								</div>
							</div>
						</div>
					</div>
				</div>
			</section>
		</main>

		<footer class="bg-gray-900 text-white py-12">
			<div class="w-full mx-auto px-8 sm:px-12 lg:px-16">
				<div class="text-center text-gray-400 text-sm">
					<p>&copy; {new Date().getFullYear()} Vsingleton Consulting</p>
				</div>
			</div>
		</footer>
	</body>
</html>
