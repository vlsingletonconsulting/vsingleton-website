---
import Navigation from '../components/Navigation.astro';
import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Vsingleton Consulting | Strategy, Development & Growth</title>
		<meta name="description" content="Transform your business with expert consulting in strategy, web development, branding, and growth.">
	</head>
	<body>
		<Navigation />

		<main class="pt-20">
			<section id="hero" class="relative bg-gradient-to-br from-gray-50 via-white to-teal-50 py-28 md:py-40">
				<div class="w-full mx-auto px-8 sm:px-12 lg:px-16">
					<div class="text-center max-w-4xl mx-auto">
						<h1 class="text-5xl md:text-7xl lg:text-8xl font-bold mb-8 leading-tight text-gray-900">
							Transform Your Digital Presence
						</h1>
						<p class="text-xl md:text-2xl mb-12 text-gray-600 max-w-3xl mx-auto leading-relaxed">
							Strategy, development, and growth solutions for modern businesses
						</p>
						<div class="flex flex-col sm:flex-row gap-6 justify-center">
							<a href="#contact" class="inline-flex items-center justify-center bg-[#5B9F9B] text-white px-10 py-4 rounded-full font-semibold hover:bg-[#4d8682] transition-all">
								Get Started
							</a>
							<a href="#services" class="inline-flex items-center justify-center bg-white text-gray-900 px-10 py-4 rounded-full font-semibold border-2 border-gray-300 hover:border-gray-400 transition-all">
								Our Services
							</a>
						</div>
					</div>
				</div>
			</section>

			<section id="services" class="py-32 bg-slate-900">
				<div class="w-full mx-auto px-8 sm:px-12 lg:px-16">
					<div class="text-center max-w-3xl mx-auto mb-20">
						<h2 class="text-5xl md:text-6xl font-bold mb-6 text-white">Services</h2>
					</div>

					<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 max-w-6xl mx-auto">
						<div class="text-center">
							<h3 class="text-2xl font-bold mb-3 text-white">Strategy</h3>
							<p class="text-gray-400 leading-relaxed">Digital roadmaps that drive growth</p>
						</div>

						<div class="text-center">
							<h3 class="text-2xl font-bold mb-3 text-white">Development</h3>
							<p class="text-gray-400 leading-relaxed">Web applications that perform</p>
						</div>

						<div class="text-center">
							<h3 class="text-2xl font-bold mb-3 text-white">Design</h3>
							<p class="text-gray-400 leading-relaxed">Brand identity that resonates</p>
						</div>

						<div class="text-center">
							<h3 class="text-2xl font-bold mb-3 text-white">Growth</h3>
							<p class="text-gray-400 leading-relaxed">Data-driven optimization</p>
						</div>
					</div>
				</div>
			</section>

	
	
			<section id="contact" class="py-40 bg-slate-900">
				<div class="max-w-4xl mx-auto px-8 text-center">
					<h2 class="text-5xl md:text-7xl font-bold mb-12 text-white">Let's Work Together</h2>
					<a href="mailto:hello@vsingleton.com" class="inline-flex items-center justify-center bg-[#5B9F9B] text-white px-12 py-5 rounded-full text-lg font-semibold hover:bg-[#4d8682] transition-all">
						Get in Touch
					</a>
				</div>
			</section>
		</main>

		<footer class="bg-gray-900 text-white py-12">
			<div class="w-full mx-auto px-8 sm:px-12 lg:px-16">
				<div class="text-center text-gray-400 text-sm">
					<p>&copy; {new Date().getFullYear()} Vsingleton Consulting</p>
				</div>
			</div>
		</footer>
	</body>
</html>
